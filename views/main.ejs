<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
   
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../public/style.css"/>
    <title>Blog Home page</title>
  </head>
  <body>
    <%- include ('_navbar') %>
    <h2 class="m-auto mt-4 mx-5"><center>All blogs</center></h2>

    <% articles.forEach(article=>{%>
        <div class="card mt-4 mx-5 pd-4">
            <div class="card-body mx-2">
                <h4 class="card-title"><%= article.title %></h4>
                <div class="card-subtitle text-muted mb-3">
                 date created
                </div>
                <div class="card-text mb-3"><%= article.body %></div>
                <div class="mx-1 mb-1">
                <button type="button" class="btn btn-success"> <a  class='text-decoration-none text-reset' href="/<%=article.id %>">Read</a></button>
               <button type="button" class="btn btn-secondary"><a  class='text-decoration-none text-reset' href="edit/<%=article.id %>">Edit</a></button>
               
               <button type="button" class="btn btn-danger"><a  class='text-decoration-none text-reset' href="delete/<%=article.id %>">delete</a></button>
               </div>
            </div>
        </div>
    
     <% }) %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" 
    crossorigin="anonymous"></script>
  </body>
</html>


